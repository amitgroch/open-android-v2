<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.citrus.sample.MainActivity">

    <Button
        android:id="@+id/bind"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Bind User"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/savecard"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Save Card"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/getWallet"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Get Cards"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/paybutton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Payments"
        android:layout_marginBottom="20dp"/>
    
    <Button android:id="@+id/widgets"
        	android:layout_width="match_parent"
        	android:layout_height="50dp"
        	android:text="Widgets"
        	android:layout_marginBottom="20dp"/>
	
    <Button android:id="@+id/testcardpay"
        	android:layout_width="match_parent"
        	android:layout_height="50dp"
        	android:text="Test Card Payment"/>
    
</LinearLayout>
